@model ControldeCambios.Models.Roles_Permisos

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Index</h2>
<table class="table">
    <tr>
        <th>
            Permisos
        </th>
        @for (int i = 0; i < Model.roles.Count; i++)
        {
            <th id="@(Model.roles.ElementAt(i).Id)">
                @Html.DisplayFor(modelItem =>
Model.roles.ElementAt(i).Name)
            </th>
        }
    </tr>
    @for (int i = 0; i < Model.permisos.Count; i++)
    {
        <tr>
            <th id="@(Model.permisos.ElementAt(i).codigo)">
                @Html.DisplayFor(modelItem =>
Model.permisos.ElementAt(i).nombre)
            </th>
            @for (int j = 0; j < Model.roles.Count; j++)
            {
                <th id="@(Model.permisos.ElementAt(i).codigo)_/_@(Model.roles.ElementAt(j).Id)">
                    @{bool exists = false;}
                    @for(int k = 0; k < Model.rol_permisos.Count; k++)
                    {
                        if (Model.rol_permisos.ElementAt(k).rol.Equals(Model.roles.ElementAt(j).Id))
                        {
                            if (Model.rol_permisos.ElementAt(k).permiso.Equals(Model.permisos.ElementAt(i).codigo))
                            {
                                exists = true;
                            }
                        }
                    }
                    @Html.CheckBox("checkbox", exists)
                </th>
            }
        </tr>
    }
</table>

