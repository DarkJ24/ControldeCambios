@model ControldeCambios.Models.Solicitud_CambiosIndexModel
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Índice de Solicitud de Cambios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Solicitud de Cambios</h2>
<h4>@ViewBag.Title</h4>
<hr />

<table class="table">
    <tr>
        <th>
            Código
        </th>
        <th>
            Nombre
        </th>
        <th>
            Prioridad
        </th>
        <th>
            Esfuerzo
        </th>
        <th>
            Estado de Solicitud
        </th>
        <th>
            Fecha de Solicitud
        </th>
        <th>
            Consultar
        </th>
    </tr>
    @foreach (var req in Model.reqs)
    {
        <tr id="@(req.id)">
            <td>
                @Html.DisplayFor(modelItem => req.codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => req.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => req.prioridad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => req.esfuerzo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => req.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => req.creadoEn)
            </td>
            @if (Model.detallesRequerimientos)
            {
                <td>

                    @Html.ActionLink("Consultar", "Detalles", new
               {
                   id = req.id
               })
                </td>
            }
        </tr>
    }
</table>