@using ControldeCambios.Helpers

<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Control de Cambios</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/toastr")
    @Styles.Render("~/Content/font-awesome")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .side-nav {
            position: fixed;
            top: 51px;
            left: 0px;
            margin-left: 0px;
            border: none;
            border-radius: 0;
            overflow: hidden;
            background-color: #222;
            min-height: 100%;
        }
        .side-li {
            color: #999999 !important;
        }
        .side-li a{
            width: 120px;
        }
        .side-li:hover {
            color:#FFFFFF !important;
        }
        .active {
            color:#FFFFFF !important;
        }
        .inlineText {
            display: inline-block !important;
        }
        .fa-lg {
            margin-right: 10px;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".side-nav" style="float:left;display:block;margin-left:20px;">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Control de Cambios", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        @Html.Partial("_LoginPartial")
        <ul class="nav navbar-nav side-nav collapse">
            @if (Request.IsAuthenticated)
            {
                <li class="side-li @Html.IsSelected(actions: "Index,Crear,Detalles", controllers: "Usuarios")"><a href="@Url.Action("Index", "Usuarios")" class = "inlineText"><i class='fa fa-user fa-lg'></i>Usuarios</a></li>
                <hr/>
                <li class="side-li @Html.IsSelected(actions: "Index", controllers: "Roles_Permisos")"><a href="@Url.Action("Index", "Roles_Permisos")" class="inlineText"><i class='fa fa-list-alt fa-lg'></i>Roles</a></li>
            }
        </ul>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Control de Cambios</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Html.Partial("_Toastr")
</body>
</html>
